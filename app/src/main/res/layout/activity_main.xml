<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/left_column"
                style="@style/VerticalColumn">
            <ImageView
                    android:id="@+id/left_image"
                    style="@style/ImageView"
                    android:src="@drawable/afterglow_beach_cliff_2555285"
                    android:contentDescription="@string/cliff"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/right_column"
                style="@style/VerticalColumn">
            <ImageView
                    android:id="@+id/right_image"
                    style="@style/ImageView"
                    android:src="@drawable/clouds_coconut_trees_daylight_2486168"
                    android:contentDescription="@string/trees"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>